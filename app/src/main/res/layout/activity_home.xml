<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ECECEC"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:text="VERBALVERSE"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:textSize="40sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Các học phần"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"></TextView>
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">


            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:background="#B3E9E5E0"
                android:hint="abc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Xem thêm"
                android:layout_marginTop="5dp"
                android:textSize="15sp"></TextView>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Các thư mục"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"></TextView>
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp">


            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:background="#B3E9E5E0"
                android:hint="abc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Xem thêm"
                android:layout_marginTop="5dp"
                android:textSize="15sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="#41485185"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home"></ImageView>

            <ImageView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/paper"></ImageView>

            <ImageView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/more"></ImageView>

            <ImageView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/folder"></ImageView>

            <ImageView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/user"></ImageView>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>


