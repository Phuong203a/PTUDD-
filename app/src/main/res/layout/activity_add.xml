<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D8D8D8"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        android:backgroundTint="#C9E1E1E1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="VERBALVERSE"
            android:textColor="#46000000"
            android:textSize="50sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Các học phần"
            android:orientation="vertical"
            android:textSize="25sp"></TextView>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="#56F4F2F2"
            android:gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">


            <EditText
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:background="#65D1CECB"
                android:hint="abc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Xem thêm"
                android:orientation="vertical"
                android:textSize="15sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="300dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <EditText
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:background="#B3E9E5E0"
                android:drawableLeft="@drawable/folder_1"
                android:text="Thư mục" />


            <EditText
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:background="#B3E9E5E0"
                android:drawableLeft="@drawable/school"
                android:text="Học phần" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>


